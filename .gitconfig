[push]
  default = simple
[alias]
  pushup = "!git push --set-upstream origin $(git symbolic-ref --short HEAD)"
  diffw = diff --color-words
  ci = commit -a
  co = checkout
  st = status
  br = branch
  pushfl = push --force-with-lease
[core]
  excludesfile = ~/.gitignore
[log]
  decorate = auto
[rebase]
  autosquash = true
[pull]
  rebase = true
